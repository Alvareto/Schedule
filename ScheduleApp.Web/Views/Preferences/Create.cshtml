@model ScheduleApp.Web.Models.DatePreferenceViewModel

@{
    ViewData["Title"] = "Add";
    ViewData["Subtitle"] = "Shift Preference";
}
@section Breadcrumbs {
    <ol class="breadcrumb">
        <li><a href="#">Preferences</a></li>
        <li class="active">Create</li>
    </ol>
}

<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Day" class="control-label"></label>
                <input type="date" asp-for="Day" class="form-control" />
                <span asp-validation-for="Day" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="IsPreffered" class="control-label"></label>
                <input type="checkbox" asp-for="IsPreffered" class="form-control" />
                <span asp-validation-for="IsPreffered" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
