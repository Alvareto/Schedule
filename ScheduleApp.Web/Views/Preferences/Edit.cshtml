@model ScheduleApp.Web.Models.DatePreferenceEditViewModel

@{
    ViewData["Title"] = "Edit";
    ViewData["Subtitle"] = "Shift Preference";
}
@section Breadcrumbs {
    <ol class="breadcrumb">
        <li><a href="#">Preferences</a></li>
        <li class="active">Edit</li>
    </ol>
}

<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <input type="hidden" asp-for="UserId" />
            <div class="form-group">
                <label asp-for="Day" class="control-label"></label>
                <input asp-for="Day" class="form-control" />
                <span asp-validation-for="Day" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="IsPreffered" class="control-label"></label>
                <input asp-for="IsPreffered" class="form-control" />
                <span asp-validation-for="IsPreffered" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
