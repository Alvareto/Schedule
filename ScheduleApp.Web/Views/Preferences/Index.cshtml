@model IEnumerable<ScheduleApp.Model.DatePreference>

@{
    ViewData["Title"] = "Preferences";
    ViewData["Subtitle"] = "Management";
}

@section Breadcrumbs
    {
    <ol class="breadcrumb">
        <li><a href="#">Administration</a></li>
        <li class="active">Preferences</li>
    </ol>
}

