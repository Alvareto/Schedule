@model ScheduleApp.Model.SwitchRequest

@{
    ViewData["Title"] = "Offer";
    ViewData["Subtitle"] = "Shift Switch";
}

@section Breadcrumbs {
    <ol class="breadcrumb">
        <li><a href="#">Requests</a></li>
        <li><a href="#">Create</a></li>
        <li class="active">Broadcast</li>
    </ol>
}

<div class="row">
    <div class="col-md-4">
        <form asp-action="Broadcast">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="UserId" />
            <div class="form-group">
                <label asp-for="CurrentShiftId" class="control-label"></label>
                <select asp-for="CurrentShiftId" class="form-control" asp-items="ViewBag.CurrentShiftId"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <button class="btn btn-primary" asp-action="Index">Back to List</button>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
